<div class="container mt-5">
  <div class="card">
    <div class="card-body">
      <div class="row">
          <div class="col-md-12">
              <h4>Your Profile</h4>
              <hr>
          </div>
      </div>
      <div class="row">
        <div class="col-md-12">
            
            <div class="form-group row">
              <%= label :name,"Name: ", class: "col-4 col-form-label" %>
              <div class="col-8">
                <%= current_user.name %>
              </div>
            </div>

            <div class="form-group row">
              <%= label :email,"Email: ", class: "col-4 col-form-label" %>
              <div class="col-8">
                <%= current_user.email %>
              </div>
            </div>

            <div class="form-group row">
              <%= label :tel,"Phone number: ", class: "col-4 col-form-label" %>
              <div class="col-8">
                <%= current_user.tel %>
              </div>
            </div>

            <div class="form-group row">
              <%= label :address,"Address: ", class: "col-4 col-form-label" %>
              <div class="col-8">
                <%= current_user.address %>
              </div>
            </div>
            
            <div class="actions">
              <%= link_to "Back", :back %>
              <%= link_to "edit profile", edit_user_registration_path, class: "btn btn-primary" %>
            </div>
        </div>
      </div>
    </div>
  </div>
</div>
