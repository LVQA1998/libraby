<div class="container mt-5">
  <div class="card">
    <div class="card-body">
      <div class="row">
          <div class="col-md-12">
              <h4>Your Profile</h4>
              <hr>
          </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            
            <div class="form-group row">
              <%= f.label :name,"Name: ", class: "col-4 col-form-label" %>
              <div class="col-8">
                <%= f.text_field :name, class: "form-control", required: true %>
                <%= errors_for f, :name %>
              </div>
            </div>

            <div class="form-group row">
              <%= f.label :email,"Email: ", class: "col-4 col-form-label" %>
              <div class="col-8">
                <%= f.text_field :email, class: "form-control", required: true %>
                <%= errors_for f, :email %>
              </div>
            </div>

            <div class="form-group row">
              <%= f.label :tel,"Phone number: ", class: "col-4 col-form-label" %>
              <div class="col-8">
                <%= f.text_field :tel, class: "form-control", required: true %>
                <%= errors_for f, :tel %>
              </div>
            </div>

            <div class="form-group row">
              <%= f.label :address,"Address: ", class: "col-4 col-form-label" %>
              <div class="col-8">
                <%= f.text_field :address, class: "form-control", required: true %>
                <%= errors_for f, :address %>
              </div>
            </div>

            <div class="form-group row">
              <div class="col col-4">
                <%= f.label :current_password, "Current password: " %><br>
                <i>(we need your current password to confirm your changes)</i>
              </div>
              <div class="col-8">
                <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
                <%= errors_for f, :current_password %>
              </div>
            </div>

            <div class="form-group row">
              <div class="col col-4">
                <%= f.label :password, "Password: " %><br>
                <i>(leave blank if you don't want to change it)</i>
              </div>
              <div class="col-8">
                <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
                <%= errors_for f, :password %>
              </div>
            </div>

            <div class="form-group row">
              <%= f.label :password_confirmation, class: "col-4 col-form-label" %>
              <div class="col-8">
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
                <%= errors_for f, :password_confirmation %>
              </div>
            </div>
            
            <div class="actions">
              <%= link_to "Back", :back %>
              <%= f.submit "Update", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
