<div class="container-bg form-login">
  <div class="container">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5">
          <div class="card-body">
            <h5 class="card-title text-center">Sign In</h5>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "form-signin") do |f| %>
                <div class="container-fluid">
                  <p class="notice"><%= notice %></p>
                  <p class="alert"><%= alert %></p>
						      <%= render "devise/shared/error_messages", resource: resource %>
                </div>
                <div class="form-label-group">
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email address", required: :true, autofocus: :true %>
                  <%= f.label :email, class: "required" %>
                </div>
                <%= errors_for f, :email %>

                <div class="form-label-group">
                  <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Password", required: :true %>
                  <%= f.label :password, class: "required" %>
                </div>
                <%= errors_for f, :password %>

                <div class="custom-control custom-checkbox mb-3">
                  <% if devise_mapping.rememberable? %>
                    <div class="field">
                      <%= f.check_box :remember_me %>
                      <%= f.label :remember_me %>
                    </div>
                  <% end %>
                </div>
                <%= f.submit "Sign in", class: "btn btn-lg btn-primary btn-block text-uppercase" %>
            <% end %>
            <%= link_to "Forgot your password?", new_password_path(resource_name), class: "mb-2" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
