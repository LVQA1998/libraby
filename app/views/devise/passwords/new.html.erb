<div class="container-bg reset-password">
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-lg-8 col-md-10">
					<div class="forgot">
							<h2>Forgot your password?</h2>
							<p>Change your password in three easy steps. This will help you to secure your password!</p>
							<ol class="list-unstyled">
									<li><span class="text-primary text-medium">1. </span>Enter your email address below.</li>
									<li><span class="text-primary text-medium">2. </span>Our system will send you a temporary link</li>
									<li><span class="text-primary text-medium">3. </span>Use the link to reset your password</li>
							</ol>
					</div>
					<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, class: "card mt-4") do |f| %>
						<%= render "devise/shared/error_messages", resource: resource %>
							<div class="card-body">
									<div class="form-group"> 
										<label for="email-for-pass">Enter your email address</label> 
										<%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control require", required: true %>
										<small class="form-text text-muted">Enter the email address you used during the registration. Then we'll email a link to this address.</small> 
									</div>
							</div>
							<div class="card-footer"> 
								<%= f.submit "Get New Password", class: "btn btn-success" %>
								<%= link_to "Back to Login", :back, class: "btn btn-danger" %>
							</div>
					<% end %>
			</div>
		</div>
	</div>
</div>
